//Palindrome string 

#include<iostream>
#include<bits/stdc++.h>
using namespace std;


int palindromestring(string s)
{
    for(int i=0;i<s.length()/2;i++)
    {
        if(s[i]!= s[s.size()-i-1])
          return 0;
    }
    return 1;
}

int main()
{
    string s;
    cin>>s;
    
    cout<<palindromestring(s);
    
    
    return 0;
}
